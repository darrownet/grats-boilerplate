{
  "name": "grats-boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate for GraphQL, React/React-Apollo, Typescipt and Sass",
  "author": "MAtt Schiffman",
  "private": true,
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "build": "npm run clean-build && webpack -p --config=config/webpack/webpack.prod",
    "clean-build": "rm -f -r -d build",
    "server": "nodemon ./build/server.js",
    "start": "webpack-dev-server --open --watch --config=config/webpack/webpack.dev",
    "test": "jest --coverage --config=config/jest/jest.config.js"
  },
